<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/layout_v1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="ImiÄ™"
            android:ems="10"
            android:id="@+id/ET_new_client_name"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#fffffffa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nazwisko"
            android:ems="10"
            android:id="@+id/ET_new_client_last_name"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#fffffffa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Miasto"
            android:ems="10"
            android:id="@+id/ET_new_client_city" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/ET_new_client_street"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Ulica"
            android:textColor="#fffffffa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/ET_client_home_number"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Numer domu"
            android:textColor="#fffffffa" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/ET_new_client_flat_number"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Numer mieszkania"
            android:textColor="#fffffffa" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="DODAJ KLIENTA"
            android:id="@+id/button13"
            android:onClick="addNewClientButtonOnClick"
            android:background="@mipmap/button_v1"
            android:textColor="#fffffffa"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</LinearLayout>