<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:weightSum="1">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ET_edit_order_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/edit_text_style"
        android:layout_weight="0.03" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ET_edit_order_desc"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_style"
        android:layout_weight="0.03" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ET_edit_order_status"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_style"
        android:layout_weight="0.03" />

    <Button
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:id="@+id/BT_savae_change_order"
        android:onClick="saveEditOrderOnClick"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#0707a6"
        android:textColor="#fffffffa" />
</LinearLayout>