    <Button
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="Odepnij zlecenie"
        android:id="@+id/BT_card_unpin"
        android:layout_weight="0.06"
        android:onClick="unPinOrderOnClick" />
</LinearLayout>