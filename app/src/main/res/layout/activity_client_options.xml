<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ET_clients_settings"
        android:layout_weight="0.64" />

    <Button
        android:layout_width="169dp"
        android:layout_height="75dp"
        android:text="Edytuj klienta"
        android:id="@+id/BT_edytuj_klienta"
        android:onClick="editClientOnClick" />

    <Button
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:text="Usuń"
        android:id="@+id/BT_usun_klienta"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:onClick="deleteClientOnClick" />

    <Button
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:text="Dodaj zgłoszenie"
        android:id="@+id/BT_add_order"
        android:layout_weight="0.18"
        android:onClick="addNewOrderOnClick" />
</LinearLayout>